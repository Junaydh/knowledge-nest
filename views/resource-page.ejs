<!DOCTYPE html>


<html lang="en">

<head>
  <title><%= resources[0].title %></title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Bungee+Shade&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />


  <script src="/vendor/jquery-3.0.0.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/timeago.js/4.0.2/timeago.min.js" integrity="sha512-SVDh1zH5N9ChofSlNAK43lcNS7lWze6DTVx1JCXH1Tmno+0/1jMpdbR8YDgDUfcUrPp1xyE53G42GFrcM0CMVg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
  <script defer src="/scripts/resource-comments.js"></script>

</head>
<body>
  <nav>
    <span><img id="logo" src="https://www.kadencewp.com/wp-content/uploads/2020/10/alogo-2.png"></span>
    <a id="logo-link" href="/"><h1>Knowledge Nest</h1></a>
    <div id="search">
      <input type="text" placeholder="Search..">
    </div>
  </nav>
  <div id="dropdown"></div>
  <main id="resource-containers">

    <% for(let resource of resources) {%>

    <section class="resource-container">
      <article class="resource-listing">
        <section class="resource-preview-image">
          <img src="<%= resource.resource_url %>">
        </section>
        <section class="resource-details">
          <header>
            <a class="resource-link" href="<%= resource.resource_url %>">Click here to go to link!</a>
            <div class="resource-rating">${data.average_rating}/5</div>
          </header>
          <h3 class="resource-title"><a href="/egg/<%= resource.id %>"><%= resource.title %></a></h3>
          <div class="resource-description"><%= resource.description %></div>
          <footer>
            <div class="resource-tag-container" id="<%= resource.id %>">
            </div>
          </footer>
        </section>
      </article>
    </section>

    <% } %>

    <section id="comments-container"></section>
  </main>
</body>

</html>
