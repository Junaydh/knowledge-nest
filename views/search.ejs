<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Bungee+Shade&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/resources.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/search.js"></script>
  <script src="/scripts/likeRate"></script>
</head>
<body>
  <nav>
    <span><img id="logo" src="https://www.kadencewp.com/wp-content/uploads/2020/10/alogo-2.png"></span>
    <a id="logo-link" href="/"><h1>Knowledge Nest</h1></a>
    <div id="search">
      <form method="POST" action="/search" id="search-form">
        <button type="submit"><i class="fa fa-magnifying-glass"></i></button>
        <input type="text" name="query" placeholder="Search...">
      </form>
    </div>
  </nav>
  <div id="dropdown"></div>
  <main id="main-container">
    <% if (data) { %>
      <% for (let resource of data) { %>
        <section class="resource-container">
          <article class="resource-listing">
            <section class="resource-preview-image">
              <img src="<%= resource.img_url %>">
            </section>
            <section class="resource-details">
              <header>
                <a class="resource-link" href="<%= resource.resource_url %>">Click here to go to link!</a>
                <div class="resource-rating"><% for (let i = 1; i <= resource.avg_rating; i++) { %>
                  <i class="fa-solid fa-star"></i>
                    <% if (i + 1 > resource.avg_rating) { %>
                         <%= i %>/5
                    <% } %>
                  <% } %>
                </div>
              </header>
              <h3 class="resource-title"><a href="/egg/<%= resource.id %>"><%= resource.title %></a></h3>
              <div class="resource-description"><%= resource.description %></div>
              <footer>
                <div class="resource-tag-container" id="<%= resource.id %>">
                </div>
                <div id="icons">
                  <span><%= resource.total_likes %>    <i class="fa-solid fa-heart"></i></span>
                </div>
              </footer>
            </section>
          </article>
        </section>
      <% } %>
    <% } %>
  </main>
</body>
</html>
